# Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Update for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=*

# Database
DATABASE_URL=postgresql://civicq:civicq@localhost:5432/civicq
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# S3 / Object Storage
S3_BUCKET=civicq-media
S3_REGION=us-west-2
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT=  # Leave empty for AWS S3, or specify for S3-compatible service

# CDN
CDN_URL=  # Optional CDN URL for serving media

# Video Processing
MAX_VIDEO_DURATION_SECONDS=180
VIDEO_TIME_LIMIT_COUNCIL=90
VIDEO_TIME_LIMIT_MAYOR=120
VIDEO_TIME_LIMIT_MEASURE=180

# Transcription
TRANSCRIPTION_SERVICE=whisper
OPENAI_API_KEY=  # Required if using OpenAI Whisper API
DEEPGRAM_API_KEY=  # Required if using Deepgram
ASSEMBLYAI_API_KEY=  # Required if using AssemblyAI

# AI/LLM Features (Anthropic Claude)
ANTHROPIC_API_KEY=  # Required for AI-powered features
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929  # Claude model to use
ENABLE_AI_FEATURES=true  # Enable/disable AI features

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.85

# Question Ranking
TOP_QUESTIONS_COUNT=100
CLUSTER_MAX_QUESTIONS=5
MINORITY_CONCERN_SLOTS=10

# Rate Limiting
RATE_LIMIT_QUESTIONS_PER_DAY=10
RATE_LIMIT_VOTES_PER_HOUR=100

# Verification
VERIFICATION_METHOD=sms
VERIFICATION_CODE_EXPIRE_MINUTES=15

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@civicq.org

# Email (SendGrid) - Recommended for production
SENDGRID_API_KEY=  # Get from https://sendgrid.com

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# OAuth - Google
GOOGLE_CLIENT_ID=  # Get from https://console.cloud.google.com
GOOGLE_CLIENT_SECRET=

# OAuth - Facebook
FACEBOOK_CLIENT_ID=  # Get from https://developers.facebook.com
FACEBOOK_CLIENT_SECRET=

# Session Settings
SESSION_EXPIRE_SECONDS=86400  # 24 hours
REMEMBER_ME_EXPIRE_SECONDS=2592000  # 30 days

# Moderation
AUTO_MODERATE=true
TOXICITY_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO

# Sentry (Error Tracking) - Optional
SENTRY_DSN=  # Leave empty to disable

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Feature Flags
ENABLE_VIDEO_RECORDING=true
ENABLE_REBUTTALS=true
ENABLE_SOURCE_ATTACHMENTS=true
ENABLE_VIEWPOINT_CLUSTERING=true

# External Ballot Data APIs
# Get your API keys from:
# - Google Civic Information API: https://developers.google.com/civic-information
# - VoteAmerica API: https://www.voteamerica.com/api/
# - Ballotpedia API: https://ballotpedia.org/API-documentation
GOOGLE_CIVIC_API_KEY=  # Optional - For importing ballot data
VOTE_AMERICA_API_KEY=  # Optional - For importing ballot data
BALLOTPEDIA_API_KEY=  # Optional - For importing ballot data
