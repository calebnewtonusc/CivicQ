{
  "dashboard": {
    "title": "CivicQ - API Performance",
    "tags": ["civicq", "api", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(civicq_http_requests_total[5m]))",
            "legendFormat": "Total Requests",
            "refId": "A"
          },
          {
            "expr": "sum(rate(civicq_http_requests_total{status=~\"2..\"}[5m]))",
            "legendFormat": "2xx Success",
            "refId": "B"
          },
          {
            "expr": "sum(rate(civicq_http_requests_total{status=~\"4..\"}[5m]))",
            "legendFormat": "4xx Client Errors",
            "refId": "C"
          },
          {
            "expr": "sum(rate(civicq_http_requests_total{status=~\"5..\"}[5m]))",
            "legendFormat": "5xx Server Errors",
            "refId": "D"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "yaxes": [
          {
            "format": "reqps"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate %",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(civicq_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(civicq_http_requests_total[5m])) * 100",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yaxes": [
          {
            "format": "percent",
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data"
        }
      },
      {
        "id": 3,
        "title": "Response Time (P50, P95, P99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(civicq_http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(civicq_http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(civicq_http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "format": "s",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Top Slowest Endpoints",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(civicq_http_request_duration_seconds_bucket[5m])) by (le, endpoint)))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "endpoint": 0,
                "Value": 1
              },
              "renameByName": {
                "endpoint": "Endpoint",
                "Value": "P95 Response Time (s)"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Requests by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "topk(10, sum(rate(civicq_http_requests_total[5m])) by (endpoint))",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "yaxes": [
          {
            "format": "reqps"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(civicq_http_requests_in_progress)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "Total Requests (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(civicq_http_requests_total[24h]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 8,
        "title": "Avg Response Time (5m)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(rate(civicq_http_request_duration_seconds_sum[5m]) / rate(civicq_http_request_duration_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "id": 9,
        "title": "Error Count (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(civicq_http_requests_total{status=~\"5..\"}[24h]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      }
    ]
  }
}
