################################################################################
# CivicQ Frontend Environment Configuration
################################################################################
# IMPORTANT: This is a template file. Copy this to .env and fill in your values.
#
# Quick Start:
#   1. Copy: cp .env.example .env.local
#   2. Update REACT_APP_API_URL to match your backend URL
#   3. Configure optional services (Analytics, Sentry, etc.)
#
# Note: Create React App requires env vars to start with REACT_APP_
# Note: Changes require restarting the dev server
################################################################################

# ============================================================================
# API CONFIGURATION (REQUIRED)
# ============================================================================
REACT_APP_API_URL=http://localhost:8000/api
# Backend API base URL
# Development: http://localhost:8000/api
# Production: https://api.civicq.com/api
# Docker: http://backend:8000/api (if using docker-compose)
# IMPORTANT: Must match backend BACKEND_URL + /api path

REACT_APP_BASE_URL=http://localhost:3000
# Frontend base URL (where this React app is hosted)
# Used for: OAuth callbacks, sharing links, meta tags
# Development: http://localhost:3000
# Production: https://app.civicq.com or https://civicq.com
# IMPORTANT: Must match backend FRONTEND_URL setting

# ============================================================================
# ENVIRONMENT
# ============================================================================
REACT_APP_ENV=development
# Options: development, staging, production
# Controls error display, debugging features, analytics

# ============================================================================
# FEATURE FLAGS
# ============================================================================
REACT_APP_ENABLE_VIDEO_RECORDING=true
# Enable video recording feature for candidate answers
# Set to false to disable video uploads

REACT_APP_ENABLE_REBUTTALS=true
# Allow candidates to post rebuttals to questions
# Set to false to hide rebuttal functionality

REACT_APP_ENABLE_DEMO_MODE=false
# Enable demo mode with mock data (no backend required)
# Useful for testing and demonstrations

# ============================================================================
# ANALYTICS (OPTIONAL)
# ============================================================================
REACT_APP_GOOGLE_ANALYTICS_ID=
# Google Analytics Measurement ID
# Format: G-XXXXXXXXXX
# Get from: https://analytics.google.com/
# Leave empty to disable Google Analytics

REACT_APP_PLAUSIBLE_DOMAIN=
# Plausible Analytics domain (privacy-friendly alternative)
# Example: civicq.com
# Get from: https://plausible.io/
# Leave empty to disable Plausible

# ============================================================================
# ERROR TRACKING - SENTRY (OPTIONAL - recommended for production)
# ============================================================================
REACT_APP_SENTRY_DSN=
# Sentry DSN for frontend error tracking
# Get from: https://sentry.io/settings/projects/[your-project]/keys/
# Leave empty to disable Sentry
# Example: https://abc123@o123456.ingest.sentry.io/123456

REACT_APP_SENTRY_ENVIRONMENT=development
# Sentry environment name
# Options: development, staging, production

# ============================================================================
# SOCIAL SHARING & SEO
# ============================================================================
REACT_APP_SITE_NAME=CivicQ
# Site name for meta tags and social sharing

REACT_APP_SITE_DESCRIPTION=Ask candidates the questions that matter to you
# Site description for SEO and social sharing

REACT_APP_SOCIAL_IMAGE_URL=
# Default social sharing image (Open Graph / Twitter Card)
# Absolute URL: https://civicq.com/images/og-image.png
# Leave empty to use default

# ============================================================================
# MAPS & LOCATION (OPTIONAL)
# ============================================================================
REACT_APP_GOOGLE_MAPS_API_KEY=
# Google Maps API key for location-based features
# Get from: https://console.cloud.google.com/apis/credentials
# Required for: City selection map, district boundaries
# Leave empty to disable map features

# ============================================================================
# VIDEO PROCESSING
# ============================================================================
REACT_APP_MAX_VIDEO_SIZE_MB=100
# Maximum video file size in megabytes

REACT_APP_MAX_VIDEO_DURATION_SECONDS=180
# Maximum video duration (3 minutes)

REACT_APP_SUPPORTED_VIDEO_FORMATS=video/webm,video/mp4,video/quicktime
# Comma-separated list of supported video MIME types

# ============================================================================
# WEBSOCKETS (OPTIONAL - for real-time features)
# ============================================================================
REACT_APP_WS_URL=
# WebSocket URL for real-time updates
# Development: ws://localhost:8000/ws
# Production: wss://api.civicq.com/ws
# Leave empty to disable real-time features

# ============================================================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ============================================================================
REACT_APP_STRIPE_PUBLIC_KEY=
# Stripe publishable key for donations/payments
# Get from: https://dashboard.stripe.com/apikeys
# Leave empty to disable payment features

REACT_APP_RECAPTCHA_SITE_KEY=
# Google reCAPTCHA v3 site key for spam prevention
# Get from: https://www.google.com/recaptcha/admin
# Leave empty to disable reCAPTCHA

# ============================================================================
# DEBUGGING & DEVELOPMENT
# ============================================================================
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
# Enable Redux DevTools in development
# Set to false to disable (recommended for production)

REACT_APP_LOG_LEVEL=info
# Console log level
# Options: debug, info, warn, error
# Use 'error' in production to reduce console noise

REACT_APP_MOCK_API_DELAY_MS=500
# Simulated API delay in demo mode (milliseconds)
# Only applies when REACT_APP_ENABLE_DEMO_MODE=true

# ============================================================================
# BUILD OPTIMIZATION
# ============================================================================
GENERATE_SOURCEMAP=true
# Generate source maps for debugging
# Set to false in production to reduce bundle size and protect source code

# ============================================================================
# CUSTOM BRANDING (OPTIONAL)
# ============================================================================
REACT_APP_PRIMARY_COLOR=#4F46E5
# Primary brand color (hex code)

REACT_APP_LOGO_URL=
# Custom logo URL (absolute path)
# Leave empty to use default CivicQ logo

################################################################################
# PRODUCTION BUILD CHECKLIST
################################################################################
# Before building for production:
#
# [ ] Update REACT_APP_API_URL to production backend URL
# [ ] Update REACT_APP_BASE_URL to production frontend URL
# [ ] Set REACT_APP_ENV=production
# [ ] Add Google Analytics ID (if using)
# [ ] Add Sentry DSN for error tracking
# [ ] Set REACT_APP_SENTRY_ENVIRONMENT=production
# [ ] Set GENERATE_SOURCEMAP=false for smaller bundle
# [ ] Set REACT_APP_ENABLE_REDUX_DEVTOOLS=false
# [ ] Set REACT_APP_LOG_LEVEL=error
# [ ] Test OAuth flows with production URLs
# [ ] Verify all third-party API keys are for production
# [ ] Test build with: npm run build
# [ ] Test production build locally: serve -s build
################################################################################
